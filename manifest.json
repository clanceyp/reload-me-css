{
	"name": "Reload CSS"
	,"version": "0.3"
	,"manifest_version": 2
	,"background":{
		"scripts": [
			"lib/js/constants.js"
			,"lib/js/vendor/underscore.js"
			,"lib/js/background.js"
		]
	}
	,"options_page": "options.html"
	,"description": "This extension reloads css files on a timer"
	,"icons": {
		"48": "lib/i/128.png"
	}
	,"page_action": {
		"default_icon": "lib/i/48_bw.png"
		,"default_title": "Reload CSS"
        ,"default_popup": "popup.html"
	}
	,"permissions": [
		"tabs"
		,"http://*/*"
		,"https://*/*"
	],
	"web_accessible_resources":[
		"lib/i/*.png"
	],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"content_scripts": [{
		"matches": ["http://*/*","https://*/*"]
		,"js":[
            "lib/js/constants.js",
            "lib/js/vendor/zepto.js",
            "lib/js/content.js"
        ]
		,"css":["lib/css/reload-me-css.css"]
	}]

}